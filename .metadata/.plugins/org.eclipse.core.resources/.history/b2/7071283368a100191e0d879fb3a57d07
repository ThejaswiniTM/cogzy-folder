package com.cogzy.programs;

import com.cogzy.model.Circle;
import com.cogzy.model.Rectangle;
import com.cogzy.model.Shape;

public class CreateShapeObject {

	public static void main(String[] args) {

		
		double width = 5, length = 7;
		Shape rectangle = new Rectangle(width, length);
		System.out.println("Rectangle width: " + width + " and length: " + length + "\nResulting area: "
				+ rectangle.getArea() + "\nResulting perimeter: " + rectangle.getPerimete() + "\n");

		
		double radius = 5;
		Shape circle = new Circle(radius);
		System.out.println("Circle radius: " + radius + "\nResulting Area: " + circle.getArea()
				+ "\nResulting Perimeter: " + circle.getPerimeter() + "\n");

	}
}
